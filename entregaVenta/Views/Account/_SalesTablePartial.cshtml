@model IEnumerable<ventasControl.Models.Sale>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Client</th>
            <th>Description</th>
            <th>Contact</th>
            <th>Total Price</th>
            <th>Creation Date</th>
            <th>Paid Date</th>
            <th>Is Paid</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Client</td>
                    <td>@item.Description</td>
                    <td>@item.Contact</td>
                    <td>@item.TotalPrice</td>
                    <td>@item.CreationDate</td>
                    <td>@item.PaidDate</td>
                    <td>@item.IsPaid</td>
                    <td>
                        @Html.ActionLink("Details", "Details", "Sales", new { id = item.Id }, null)
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9">No sales found.</td>
            </tr>
        }
    </tbody>
</table>
